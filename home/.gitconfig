[user]
	email = samuele@zanca.dev
	name = Sam Zanca
[init]
	defaultBranch = main
[alias]
	rename = branch -m --
	undo = reset HEAD~1 --mixed
	qc = "!f() { git add -A && git commit -m \"$@\"; }; f"
	publish = !sh -c \"git push --set-upstream origin $(git branch --show-current)\"
[core]
	excludesfile = ~/.gitignore
