{
    // Theming
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'Comic Mono', 'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    // Editor Settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "editor.stickyScroll.enabled": true,
    "explorer.confirmDelete": false,
    "editor.guides.bracketPairs": "active",
    "terminal.integrated.env.osx": {},
    "editor.inlineSuggest.enabled": true,
    "todo-tree.highlights.customHighlight": {
        "FIXME": {
            "foreground": "black",
            "background": "#f24444",
            "gutterIcon": true,
            "iconColour": "#f24444"
        },
    },

    // Disable stupid features
    "security.workspace.trust.enabled": false, // Annoying trust feature
    "editor.suggest.showWords": false, // Disables [abc] suggestions
    
    /** 
     * Language Settings 
     */
    // Python
    "[python]": {
        "editor.formatOnType": true,
    },
    "python.terminal.activateEnvironment": false, // Disables auto-activation of venv
    "python.analysis.autoImportCompletions": true,
    "python.analysis.importFormat": "relative",
    "editor.suggest.showKeywords": false, // Python will show keywords in suggestions, for some reason.
    "python.analysis.typeCheckingMode": "off", // Sometimes this is useful
    "python.defaultInterpreterPath": "./.venv/bin/python", // At work we use .venv folders for python

    // JS/TS
    "javascript.validate.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    /** 
     * Extension Settings 
     */
    // Enables shellcheck for zsh files
    "shellcheck.ignorePatterns": {
        "**/*.zsh": false,
        "**/*.zshrc": false,
        "**/zshrc": false,
        "**/*.env*": true
    },
    "cSpell.userWords": [
        "Bento",
        "BENTOBOX",
        "shellcheck"
    ],
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "explorer.confirmDragAndDrop": false,

}