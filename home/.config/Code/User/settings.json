{
    "workbench.colorTheme": "Dolch",
    "workbench.iconTheme": "dolch",
    "editor.fontFamily": "'Liga Comic Mono', 'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "editor.fontSize": 13,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "editor.stickyScroll.enabled": true,
    "explorer.confirmDelete": false,
    "terminal.integrated.env.osx": {},
    "editor.inlineSuggest.enabled": true,
    "todo-tree.highlights.customHighlight": {
      "FIXME": {
        "foreground": "#000",
        "background": "#f24444",
        "gutterIcon": true,
        "iconColour": "#f24444"
      }
    },
    // Disable stupid features
    "security.workspace.trust.enabled": false, // Annoying trust feature
    "editor.suggest.showWords": false, // Disables [abc] suggestions
    "editor.suggest.showKeywords": false, // Disabled keyword suggestions
    "javascript.validate.enable": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
      
    },
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.tabSize": 2,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.autohide": true,
    "editor.mouseWheelScrollSensitivity": 0.2,
    "terminal.integrated.defaultProfile.osx": "fish",
    "autoHide.autoHideReferences": false,
    "editor.rulers": [80, 120],
    "typescript.updateImportsOnFileMove.enabled": "always",
    "git.openRepositoryInParentFolders": "always",
    "editor.fontLigatures": true,
    "eslint.run": "onSave",
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": true,
    "editor.lightbulb.enabled": "off",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "terminal.integrated.tabs.enabled": false,
    "workbench.activityBar.location": "top",
    "autoHide.autoHidePanel": false,
    "editor.glyphMargin": false, // Hides Breakpoint gutter
    "breadcrumbs.symbolPath": "off",
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "todo-tree.general.tags": [
      "BUG",
      "HACK",
      "FIXME",
      "TODO(samuele.zanca)",
      "XXX",
      "[ ]",
      "[x]"
    ],
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
      "*.ts":"${basename}.*test.${extname}",
      "*.tsx":"${basename}.*test.${extname}",
      "tsconfig.json": "tsconfig.*.json",
      "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, .npmrc, .npmrc.template, .nvmrc, .tool-versions",
      ".env": ".env*",
      ".prettierrc": ".prettierignore",
    },
    "editor.formatOnSave": true,
    "editor.linkedEditing": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "window.confirmSaveUntitledWorkspace": false
  }
  