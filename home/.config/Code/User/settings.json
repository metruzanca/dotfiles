{
    // Theming
    "workbench.colorTheme": "Dolch",
    "workbench.iconTheme": "verdandi",
    "editor.fontFamily": "'Liga Comic Mono', 'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "editor.fontSize": 13,
    // Editor Settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "editor.stickyScroll.enabled": true,
    "explorer.confirmDelete": false,
    "terminal.integrated.env.osx": {},
    "editor.inlineSuggest.enabled": true,
    "todo-tree.highlights.customHighlight": {
        "FIXME": {
            "foreground": "#000",
            "background": "#f24444",
            "gutterIcon": true,
            "iconColour": "#f24444"
        },
    },
    // Disable stupid features
    "security.workspace.trust.enabled": false, // Annoying trust feature
    "editor.suggest.showWords": false, // Disables [abc] suggestions
    /** 
     * Language Settings 
     */
    // Python
    "[python]": {
        "editor.formatOnType": true,
    },
    "python.terminal.activateEnvironment": false, // Disables auto-activation of venv
    "python.analysis.autoImportCompletions": true,
    "python.analysis.importFormat": "relative",
    "editor.suggest.showKeywords": false, // Python will show keywords in suggestions, for some reason.
    "python.analysis.typeCheckingMode": "off", // Sometimes this is useful
    "python.defaultInterpreterPath": "./.venv/bin/python", // At work we use .venv folders for python
    // JS/TS
    "javascript.validate.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    /** 
     * Extension Settings 
     */
    // Enables shellcheck for zsh files
    "shellcheck.ignorePatterns": {
        "**/*.zsh": false,
        "**/*.zshrc": false,
        "**/zshrc": false,
        "**/*.env*": true
    },
    "cSpell.userWords": [
        "Bento",
        "BENTOBOX",
        "emailblast",
        "navs",
        "noice",
        "SENSEI",
        "shellcheck",
        "testid",
        "Unlayer",
        "upserting"
    ],
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.tabSize": 2,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.autohide": true,
    "editor.mouseWheelScrollSensitivity": 0.2,
    "terminal.integrated.defaultProfile.osx": "fish",
    "bookmarks.sideBar.countBadge": "off",
    "bookmarks.keepBookmarksOnLineDelete": true,
    "bookmarks.useWorkaroundForFormatters": true,
    "autoHide.autoHideReferences": false,
    "editor.rulers": [
        80,
        120
    ],
    "typescript.updateImportsOnFileMove.enabled": "always",
    "console-ninja.featureSet": "Community",
    "git.openRepositoryInParentFolders": "always",
    "vim.smartRelativeLine": true,
    "editor.fontLigatures": true,
    "eslint.run": "onSave",
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": true,
    "editor.lightbulb.enabled": "off",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "terminal.integrated.tabs.enabled": false,
    "workbench.activityBar.location": "top",
    "autoHide.autoHidePanel": false,
    // Hides Breakpoint gutter
    "editor.glyphMargin": false,
    "breadcrumbs.symbolPath": "off",
}